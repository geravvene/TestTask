{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite-plugin-svgr/client", "jquery"]
  },
  "include": ["vite.config.ts", ".eslintrc.cjs", "src", "global.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "baseUrl": ".",
  "paths": {
    "@/*": ["src*"],
    "@svg/*": ["src/assets/svg/*"],
    "@types": ["src/types.tsx"],
    "@hooks": ["src/hooks/*"],
  }
}
